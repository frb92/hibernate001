<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 5.5.0.Final//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-5.5.0.Final.dtd" [
        <!ENTITY types SYSTEM "classpath://your/domain/types.xml">
        ]>
<hibernate-mapping>
    <class name = "org.example.Employee" table = "employees">
        <id name = "id">
            <generator class = "assigned"></generator>
        </id>
        <property name = "name"></property>
        <property name = "surname"></property>
        <property name = "jobTitle"></property>
        <property name = "address"></property>
        <property name = "age"></property>
        <property name = "salary"></property>
    </class>
</hibernate-mapping>