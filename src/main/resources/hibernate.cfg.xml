<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-5.5.0.Final.dtd">
<hibernate-configuration>
    <session-factory>
        <property name = "hbm2ddl.ato">update</property>
        <property name = "dialect">org.hibernate.dialect.mySQL8Dialect</property>
        <property name = "Connection.url">jdbc:mysql://127.0.0.1:3306/company</property>
        <property name = "connection.username">root</property>
        <property name = "connection.password"></property>
        <property name = "connection.driver_class">com.mysqk.jdbc.Driver</property>
        <mapping resource = "employee.hbm.xml"></mapping>
    </session-factory>
</hibernate-configuration>